<div class='grid gap-2'>
  <div class="border border-[#bdc3c7]  flex justify-between shadow-xl p-4">
    <div>
      <h1 class='text-2xl'><%= @post.title %></h1>
      <p><%= @post.text %></p>
    </div>
    <div class='grid grid-row items-end gap-4'>
      <p class='text-sm'>Comments: <%= @post.comment_counter %>, Likes: <%= @post.likes_counter %></p>
    </div>
  </div>
  <div>
  <div class="flex gap-2">
    <%= link_to "Add comments", new_user_post_comment_path(@user, @post), class: "btn btn-success btn-sm" %>
    <%= button_to "Add Likes", user_post_likes_path(@user, @post), method: :post, class: "btn btn-info btn-sm"%>
    <%= button_to user_post_path(@user, @post), method: :delete, data: { confirm: 'Are you sure?' }, id: 'dell-post-btn' do %>
      <%= hidden_field_tag :id, @post.id %>
      <%= submit_tag 'delete post'%>
    <% end %>
  </div>
  </div>
  <div class="border-[#bdc3c7]  grid p-10 gap-10 shadow-xl ">
    <%if @comments.empty?%>
      <p>No Comments</p>
    <%else%>
      <%@comments.each do |comment|%>
        <p> <%=comment.author.name%>: <%= comment.text%> </p>
        <%=button_to user_post_comment_path(@user, @post, comment), method: :delete, data: { confirm: 'Are you sure?' },  class: 'del-post-btn' do %>
          <%=submit_tag '|Delete', title: 'delete comment',  id: 'delete'%>
        <%end%>
      <%end%>
    <%end%>
  </div>
</div>