<div class="grid grid-cols gap-2">
  <div class="flex gap-4 shadow-xl">
    <div class="border w-1/4 p-4 shadow-xl">
      <div class="avatar">
        <div class="w-24 rounded-full border">
          <img src="<%= @user.photo %>" alt="User Photo" />
        </div>
      </div>
    </div>
    <div class="border flex justify-between w-9/12 gap-4 shadow-xl p-4">
      <h1 class="text-4xl"><%= @user.name %></h1>
      <p>Number of posts: <%= @user.post_counter %></p>
    </div>
  </div>
  <div class="border p-10 flex flex-col gap-4 shadow-xl">
    <h2 class="text-2xl">Bio</h2>
    <p><%= @user.bio %></p>
  </div>
  <div class="border p-10 flex flex-col gap-4 shadow-xl">
    <h2 class="text-2xl">Bio:</h2>
    <p><%= @user.bio %></p>
  </div>
  <div class="border p-10 flex flex-col gap-4 shadow-xl">
    <% if @user.three_recent_posts.empty? %>
      <h2>No Posts</h2>
      <p>Kindly submit a post</p>
    <% else %>
      <% @user.three_recent_posts.each do |post| %>
          <%= link_to user_post_path(user_id: @user.id, author_id: post.id) do %>
            <div class="border border-[#bdc3c7] hover:border-[#2980b9]  flex flex-col justify-between shadow-xl gap-4 p-4">
              <div>
                <h1><%= post.title %></h1>
                <p><%= post.text %></p>
              </div>
              <div class='flex gap-4'>
                <p>Comments: <%= post.comment_counter %></p>
                <p>Likes: <%= post.likes_counter %></p>
              </div>
            </div>
          <% end %>
        <% end %>
        <div class='flex items-center justify-center'>
          <%= link_to 'See all posts', user_posts_path(user_id: @user.id), class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
